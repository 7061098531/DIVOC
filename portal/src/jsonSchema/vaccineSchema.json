{
    "$id": "#properties/Medicine",
      "type": "object",
      "required": [
        "name", "status", "provider"
      ],
      "properties": {
        "name": {
          "$id": "#/properties/name",
          "type": "string",
          "title": "Name of Vaccine"
        },
        "provider": {
          "title": "Manufacturer",
          "type": "string",
          "$id": "#/properties/provider"
        },
        "medicineId": {
          "title": "Medicine ID (if applicable)",
          "type": "string",
          "$id": "#/properties/medicineId"
        },
        "administrationType": {
          "title": "Administration Type",
          "type": "string",
          "enum": ["muscular injection", "oral", "nasal"],
          "default": "muscular injection"
        },
        "Approximate Price": {
          "title": "Price",
          "type": "number"
        },
        "schedule": {
          "title": "",
          "type": "object",
          "properties": {
            "repeatInterval": {
              "title": "Total doses",
              "type": "number"
            }
          }
        },
        "effectiveUntil": {
          "type": "number",
          "title": "Effective until (months)"
        }
      }
    }